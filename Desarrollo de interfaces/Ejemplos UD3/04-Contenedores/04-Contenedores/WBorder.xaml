<Window x:Class="_04_Contenedores.WBorder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_04_Contenedores"
        mc:Ignorable="d"
    Title="Border" Height="300" Width="300" Background="Black">
    <Border BorderBrush="Gray" BorderThickness="4" Height="100" Width="64" CornerRadius="2">
        <StackPanel>
            <Rectangle Fill="Yellow" Height="50"/>
            <Rectangle Fill="Green" Height="50"/>
        </StackPanel>
    </Border>

</Window>

