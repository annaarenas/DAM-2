<Window x:Class="_04_Contenedores.WCanvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_04_Contenedores"
        mc:Ignorable="d"
   Title="Canvas" Height="300" Width="300" Background="Black">
    <Canvas Width="240" Height="240">
        <Rectangle Fill="Red"  Height="50" Width="50"/>
        <Rectangle Fill="Blue" Canvas.Left="20" Canvas.Top="20"  Height="50" Width="50"/>
        <Rectangle Fill="Green" Canvas.Left="40" Canvas.Top="40"  Height="50" Width="50"/>
        <Rectangle Fill="Yellow" Canvas.Left="60" Canvas.Top="60"  Height="50" Width="50"/>
    </Canvas>
</Window>