<Window x:Class="Ejemplo_ComboBox_Checkbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejemplo_ComboBox_Checkbox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">

            <ComboBox Name="Capitales">

                <ComboBox.ItemTemplate>
                    <DataTemplate>

                        <StackPanel Orientation="Horizontal">

                            <TextBlock Text="{Binding NombreCapital}" FontSize="16"/>

                        </StackPanel>
                        
                    </DataTemplate>
                    
                </ComboBox.ItemTemplate>
                
            </ComboBox>
            
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="100">
            <Label FontSize="16" FontWeight="Black" Content="Países"/>
            <CheckBox Name="TodasC" IsThreeState="True" Checked="TodasC_Checked" Unchecked="TodasC_Unchecked">Agregar Todas</CheckBox>

            <StackPanel Margin="15">
                
                <CheckBox Name="Madrid" Content="Madrid" Checked="Individual_Checked" Unchecked="Individual_Unchecked"/>
                <CheckBox Name="Paris" Content="Paris" Checked="Individual_Checked" Unchecked="Individual_Unchecked"/>
                <CheckBox Name="Berlin" Content="Berlin" Checked="Individual_Checked" Unchecked="Individual_Unchecked"/>
                <CheckBox Name="Londres" Content="Londres" Checked="Individual_Checked" Unchecked="Individual_Unchecked"/>

            </StackPanel>


        </StackPanel>

    </Grid>
</Window>
